[core]
	editor = vim
[user]
	name = lundeen-bryan
	email = lundeen.bryan@gmail.com
[credential]
	helper = manager
[gui]
	recentrepo = C:/Users/bigbry/Projects/source/repos/JasonTaylor/local-demo
[alias]
	hist = log --all --graph --decorate --oneline
[diff]
  tool = tortoisediff
[difftool]
  prompt = false
[merge]
  tool = tortoisemerge
[mergetool]
  prompt = false
  keepBackup = false
# tortoisegit may not be installable at work
[difftool "tortoisediff"]
  cmd = \""c:/Program Files/TortoiseGIT/bin/TortoiseGitMerge.exe"\" -mine "$REMOTE" -base "$LOCAL"
[mergetool "tortoisemerge"]
  cmd = \""c:/Program Files/TortoiseGIT/bin/TortoiseGitMerge.exe"\" -base "$BASE" -theirs "$REMOTE" -mine "$LOCAL" -merged "$MERGED"
